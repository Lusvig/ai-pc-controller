# ===========================================
# AI PC Controller - Environment Variables
# ===========================================

# AI Provider Configuration
# Options: ollama, gemini, groq, openai
AI_PROVIDER=ollama

# Ollama Configuration (FREE - Local)
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.2:3b

# Google Gemini API (FREE tier: https://makersuite.google.com/app/apikey)
GEMINI_API_KEY=

# Groq API (FREE tier: https://console.groq.com)
GROQ_API_KEY=

# OpenAI-Compatible API (optional)
OPENAI_API_KEY=
OPENAI_BASE_URL=

# Voice Configuration
VOICE_ENABLED=true
WAKE_WORD_ENABLED=false
WAKE_WORD=hey computer

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Security
ENABLE_DANGEROUS_COMMANDS=true
REQUIRE_CONFIRMATION=true

# GUI
THEME=dark
WINDOW_WIDTH=800
WINDOW_HEIGHT=600
START_MINIMIZED=false
MINIMIZE_TO_TRAY=true

# Database
DATABASE_PATH=data/history.db

# Hotkeys
GLOBAL_HOTKEY=ctrl+shift+space
EMERGENCY_STOP=ctrl+shift+escape
